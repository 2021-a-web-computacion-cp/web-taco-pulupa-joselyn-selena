<%- include('../comunes/cabecera')%>
<div class="container">

    <%const existeMensaje = typeof datos.mensaje !== 'undefined'%>
    <%if(existeMensaje){%>
    <div class="alert alert-success" role="alert">
        <%= datos.mensaje%>
    </div>
    <%}%>

    <h1>Crear usuario</h1>
    <form action="/usuario/crear-usuario-formulario" method="post">
        <di class=" mb-3">
            <label for="nombre" class="form-label">
                Nombre*
            </label>
            <input placeholder="Ej: Joselyn"
                   type="text"
                   name="nombre"
                   id="nombre"
                   aria-describedby="ayudaNombre">
            <div id="ayudaNombre" class="form-text">
                Ingrese el nombre
            </div>
        </di>
        <di class=" mb-3">
            <label for="apellido" class="form-label">
                Apellido*
            </label>
            <input placeholder="Ej: Taco"
                   type="text"
                   name="apellido"
                   id="apellido"
                   aria-describedby="ayudaApellido">
            <div id="ayudaApellido" class="form-text">
                Ingrese el apellido
            </div>
        </di>
        <button type="submit" class="btn btn-primary w-100">Crear</button>
    </form>
</div>
<%- include('../comunes/footer')%>